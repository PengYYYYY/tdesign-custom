{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": "./"
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "_tdesign-vue",
    "esm",
    "es"
  ],
  "vueCompilerOptions": {
    "target": 2
  },
  "paths": {
    "@src/*": [
      "src/*"
    ],
    "@tencent/codesign-uikit": [
      "src/*"
    ]
  }
}
