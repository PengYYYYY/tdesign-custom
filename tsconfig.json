{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.vue"],
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "declarationDir": "dist",
    "jsx": "preserve",
  },
  "vueCompilerOptions": {
    "target": 2
  }
}
